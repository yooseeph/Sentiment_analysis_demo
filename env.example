# Sentiment Analysis Dashboard Configuration
# Copy this file to .env and fill in your values

# ==============================================================================
# MODEL CONFIGURATION
# ==============================================================================

# Path to transcription model (optional - defaults to ./models/transcription/w2v-bert-darija-finetuned-clean/)
# TRANSCRIPTION_MODEL_PATH=/path/to/your/transcription/model

# ==============================================================================
# AWS CONFIGURATION (Required for Topic Analysis)
# ==============================================================================

# AWS Credentials - NEVER commit actual credentials to version control!
AWS_ACCESS_KEY_ID=AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=AWS_SECRET_ACCESS_KEY
# AWS_SESSION_TOKEN=optional_session_token

# AWS Region (default: us-west-2)
AWS_DEFAULT_REGION=Region


# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================

# Enable public URL sharing (true/false)
GRADIO_SHARE=true

# Server binding address (use 0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
SERVER_NAME=0.0.0.0

# Server port
SERVER_PORT=7861

# ==============================================================================
# AUTHENTICATION (Optional but recommended for production)
# ==============================================================================

# Basic authentication in format username:password
# DASHBOARD_AUTH=admin:your_secure_password

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==============================================================================
# PERFORMANCE TUNING (Optional)
# ==============================================================================

# Number of OpenMP threads for CPU operations
# OMP_NUM_THREADS=8

# Number of MKL threads for Intel Math Kernel Library
# MKL_NUM_THREADS=8

# CUDA visible devices (comma-separated GPU indices, e.g., "0,1")
# CUDA_VISIBLE_DEVICES=0 